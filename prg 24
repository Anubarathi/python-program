n=int(input("enter the limit:"))
for i in range(1,n+1):
    for j in range(1,i+1):
        print("*",end='')
        print("")
        
n=int(input("enter the limit:"))
for i in range(1,n+1):
    for k in range(n-i,0,-1):
        print(' ',end=' ')
    for j in range(1,i+1):
        print("*",end='')
        print("")
        
s=input("enter the string:")
n=len(s)
for i in range(0,n):
    for j in range(0,i):
        print(s[j],end='')
        print("")
